<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>MixBR React &amp; Socket.io</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <style>
            body{
                padding-top: 70px;
            }
            .nav li a.active,
            .nav li a:focus,
            .nav li a:hover {
                background-color: #e7e7e7;
            }

            .navbar-default h1 {
                font-size: 2rem;
            }

            .navbar-default .navbar-nav>li>a:focus,
            .navbar-default .navbar-nav>li>a:hover {
                background-color: #e7e7e7;
            }

            .navbar-nav>li>a {
                padding-top: 25px;
            }

            .playerControls .total {
                float: right;
            }

            .playerList,
            .lobbyList {
                display: flex;
                flex-flow: row wrap;
                justify-content: flex-start;
                align-items: flex-start;
                align-content: flex-start;
            }

            .playerCard {
                width: 48%;
                padding: 10px;
                margin: 15px 10px;
                border: solid #EDEDED 1px;
            }

            .player {
                position: relative;
            }

            .player .lobbyBtn {
                position: absolute;
                right: 3px;
                top: 3px;
            }

            .player .playerData {
                clear: both;
            }

            .player .playerAvatar,
            .player .playerInfo {
                clear: both;
                display: inline-block;
                vertical-align: top;
            }

            .player .playerAvatar {
                max-width: 20%;
                margin-right: 5px;
            }

            .player .playerAvatar img {
                width: 100%;
            }

            .player .playerDate {
                text-align: right;
            }

            .playerCard.-lobby {
                width: 25%;
            }

            .playerCard.-lobby .player .playerAvatar {
                max-width: 100%;
            }

            .playerCard.-lobby .player .playerInfo {
                text-align: center;
            }

        </style>
    </head>
    <body>
        <div id="app"></div>
        <script src="/socket.io/socket.io.js"></script>
        <script>
            window.socket = io();
        </script>
        <script src="build/app.js" type="text/javascript"></script>
    </body>
</html>
